<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/customborder"

        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <redix.booxtown.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Best time to be contacted"
                android:id="@+id/textView8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:layout_marginTop="20dp" />

            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txt_seting_besttime1"
                android:layout_below="@+id/textView8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/dot_light_screen1"
                android:text="Set time"
                android:layout_marginTop="30dp" />

            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Set time"
                android:id="@+id/txt_seting_besttime2"
                android:layout_below="@+id/txt_seting_besttime1"
                android:layout_alignLeft="@+id/txt_seting_besttime1"
                android:layout_alignStart="@+id/txt_seting_besttime1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="@color/dot_light_screen1" />

            <redix.booxtown.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:text="New Text"
                android:id="@+id/textView9"
                android:layout_above="@+id/txt_seting_besttime2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/dot_light_screen1" />

            <redix.booxtown.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:text="New Text"
                android:id="@+id/textView10"
                android:background="@color/dot_light_screen1"
                android:layout_below="@+id/txt_seting_besttime2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp" />

            <redix.booxtown.custom.CustomButton
                android:layout_width="224dp"
                android:layout_height="36dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:id="@+id/btn_setingdialog_time"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_white_popup"
                android:textColor="#f56767"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imv_close_dialog_submit"
            android:src="@drawable/btn_close_filter" />
    </LinearLayout>
</RelativeLayout>