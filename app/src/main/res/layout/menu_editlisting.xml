<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dot_light_screen2"
    android:orientation="vertical">

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView103"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="Photos "
        android:textColor="@color/color_text_big"
        />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView104"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView103"
        android:layout_toRightOf="@+id/textView103"
        android:text="(Max 3)"
        android:textColor="@color/color_text_smal" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/textView103"
        android:layout_alignStart="@+id/textView103"
        android:layout_below="@+id/textView103"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView29"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/imageView29"
        android:layout_toRightOf="@+id/imageView29"
        android:background="@drawable/border" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView30"
        android:layout_toEndOf="@+id/imageView30"
        android:layout_toRightOf="@+id/imageView30"
        android:background="@drawable/border" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/imageView31"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/imageView31"
        android:layout_toRightOf="@+id/imageView31" />

    <View
        android:id="@+id/view_listing"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/img_menu_genre"


        android:layout_alignLeft="@+id/imageView29"
        android:layout_alignRight="@+id/img_menu_genre"
        android:layout_alignStart="@+id/imageView29"
        android:layout_below="@+id/imageView29"
        android:layout_marginTop="5dp"
        android:background="@color/color_line" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/imageView29"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView29"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#f06667"
        android:visibility="invisible" />

    <com.booxtown.custom.CustomEdittext
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/view"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:hint="The last paiting"
        android:textColorHint="@color/color_text_smal"
        android:imeOptions="actionDone"
        android:singleLine="true"
        />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView106"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/editText8"
        android:layout_alignLeft="@+id/editText8"
        android:layout_alignRight="@+id/editText8"
        android:layout_alignStart="@+id/editText8"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="5dp"
        android:background="@color/color_line"
        android:text="New Text" />

    <com.booxtown.custom.CustomEdittext
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView106"
        android:layout_alignLeft="@+id/textView106"
        android:layout_alignRight="@+id/textView106"
        android:layout_alignStart="@+id/textView106"
        android:layout_below="@+id/textView106"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Author"
        android:inputType="textPersonName"
        android:textColorHint="@color/color_text_smal"
        android:imeOptions="actionDone"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textView107"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/editText9"
        android:layout_alignLeft="@+id/editText9"
        android:layout_alignRight="@+id/editText9"
        android:layout_alignStart="@+id/editText9"
        android:layout_below="@+id/editText9"
        android:layout_marginTop="5dp"
        android:background="@color/color_line"
        android:text="New Text" />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/txt_menu_genre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView107"
        android:layout_alignStart="@+id/textView107"
        android:layout_below="@+id/textView107"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/img_menu_genre"
        android:layout_toStartOf="@+id/img_menu_genre"
        android:background="@android:color/transparent"
        android:text="Genre"
        android:textColorHint="@color/color_text_hint"
        android:textSize="17sp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end" />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView108"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/textView107"
        android:layout_alignLeft="@+id/txt_menu_genre1"
        android:layout_alignRight="@+id/textView107"
        android:layout_alignStart="@+id/txt_menu_genre1"
        android:layout_below="@+id/txt_menu_genre1"
        android:layout_marginTop="5dp"
        android:background="@color/color_line"
        android:text="New Text" />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView109"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView108"
        android:layout_alignStart="@+id/textView108"
        android:layout_below="@+id/textView108"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="Book condition"
        android:textColorHint="@color/color_text_hint"
        android:textSize="17sp" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView108"
        android:layout_alignLeft="@+id/textView109"
        android:layout_alignRight="@+id/textView108"
        android:layout_alignStart="@+id/textView109"
        android:layout_below="@+id/textView109"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="5dp"
        android:max="100"
        android:maxHeight="3dip"
        android:progressDrawable="@drawable/styled_progress" />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView110"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView109"
        android:layout_alignStart="@+id/textView109"
        android:layout_below="@+id/seekBar2"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-thin"
        android:text="Poor"
        android:textColor="@color/color_text_smal"
        android:textColorHint="@color/color_text_hint"
        android:textSize="11sp" />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_menu_genre"
        android:layout_alignRight="@+id/img_menu_genre"
        android:layout_alignTop="@+id/textView110"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-thin"
        android:text="Good"
        android:textColor="@color/color_text_smal"
        android:textColorHint="@color/color_text_hint"
        android:textSize="11sp" />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView112"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/textView111"
        android:layout_alignLeft="@+id/textView110"
        android:layout_alignRight="@+id/textView111"
        android:layout_alignStart="@+id/textView110"
        android:layout_below="@+id/textView110"
        android:layout_marginTop="5dp"
        android:background="@color/color_line"
        android:text="New Text" />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView112"
        android:layout_alignStart="@+id/textView112"
        android:layout_below="@+id/textView112"
        android:layout_marginTop="5dp"
        android:text="#Tags  " />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView112"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView113"
        android:layout_toRightOf="@+id/textView113"
        android:text="(Max 3)" />


    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView115"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/row"
        android:layout_alignLeft="@+id/row"
        android:layout_alignRight="@+id/row"
        android:layout_alignStart="@+id/row"
        android:layout_below="@+id/row"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_line"
        android:text="New Text" />

    <com.booxtown.custom.CustomTextView
        android:id="@+id/textView116"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView115"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_text_big"
        android:text="Find your location on map" />

    <RadioGroup
        android:id="@+id/groupradio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView115"
        android:layout_alignLeft="@+id/textView116"
        android:layout_alignRight="@+id/textView115"
        android:layout_alignStart="@+id/textView116"
        android:layout_below="@+id/textView116"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.booxtown.custom.CustomRadioButton
            android:id="@+id/radioButton_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView116"
            android:layout_alignStart="@+id/textView116"
            android:layout_below="@+id/textView116"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:button="@drawable/radio_button"
            android:checked="true"
            android:text="  User current location"
            android:textColor="@color/color_text_smal" />

        <com.booxtown.custom.CustomRadioButton
            android:id="@+id/radioButton_another"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:button="@drawable/radio_button"
            android:checked="false"
            android:text="  Choose another"
            android:textColor="@color/color_text_smal" />
    </RadioGroup>

    <fragment
        android:id="@+id/fragment_map_editlisting"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/groupradio"
        android:layout_alignLeft="@+id/groupradio"

        android:layout_alignRight="@+id/groupradio"
        android:layout_alignStart="@+id/groupradio"
        android:layout_below="@+id/groupradio"
        android:layout_marginTop="5dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fragment_map_editlisting"
        android:layout_alignStart="@+id/fragment_map_editlisting"
        android:layout_below="@+id/fragment_map_editlisting"
        android:button="@drawable/img_checkbox"
        android:textColor="@color/color_text_big"
        android:text="Swap" />

    <CheckBox
        android:id="@+id/ck_sell_editlisting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:button="@drawable/img_checkbox"
        android:textColor="@color/color_text_big"
        android:text="Sell" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_menu_genre"
        android:layout_alignRight="@+id/img_menu_genre"
        android:layout_alignTop="@+id/ck_sell_editlisting"
        android:button="@drawable/img_checkbox"
        android:textColor="@color/color_text_big"
        android:checked="false"
        android:text="Free" />

    <TableRow
        android:id="@+id/row_price_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignRight="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox"
        android:layout_below="@+id/checkBox"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:background="@drawable/border_image">

        <com.booxtown.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AED: "
            android:gravity="center_vertical"
            android:textSize="@dimen/slide_desc"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_text_hint"
            />

        <com.booxtown.custom.CustomEdittext
            android:id="@+id/edt_editlisting_sell"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:layout_marginTop="2dp"
            android:maxLength="4"
            android:gravity="center_vertical"
            android:backgroundTint="@color/dot_light_screen1"
            android:textColorHint="@color/color_text_smal"
            android:imeOptions="actionDone"
            android:singleLine="true"
             />
    </TableRow>

    <TableRow
        android:id="@+id/row_edit_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/row_price_sell"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <com.booxtown.custom.CustomButton
            android:id="@+id/btn_menu_editlist_delete"
            android:layout_width="145dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/textView116"
            android:layout_alignRight="@+id/textView116"
            android:layout_alignTop="@+id/btn_menu_editlisting_update"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_wishbroad_popup"
            android:text="Delete book"
            android:textAllCaps="false"
            android:textColor="@color/dot_light_screen1"
            android:visibility="visible" />

        <com.booxtown.custom.CustomButton
            android:id="@+id/btn_menu_editlisting_update"
            android:layout_width="145dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/row_price_sell"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"

            android:background="@drawable/btn_wishbroad_popup"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/dot_light_screen1"
            android:visibility="visible" />
    </TableRow>

    <com.booxtown.custom.CustomButton
        android:id="@+id/btn_menu_listing_addbook"
        android:layout_width="@dimen/btn_w_181"
        android:layout_height="@dimen/btn_h"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/row_price_sell"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_wishbroad_popup"
        android:text="Add a book"
        android:textAllCaps="false"
        android:textColor="@color/dot_light_screen1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_menu_genre"
        android:layout_width="13dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/txt_menu_genre1"
        android:layout_alignEnd="@+id/textView107"
        android:layout_alignRight="@+id/textView107"
        android:layout_alignTop="@+id/textView107"
        android:layout_marginTop="8dp"
        android:longClickable="true" />

    <TableRow
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView113"
        android:layout_alignStart="@+id/textView113"
        android:layout_below="@+id/textView113"
        android:layout_marginBottom="5dp">

        <com.booxtown.custom.CustomTextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView113"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_image"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="#tag" />

        <com.booxtown.custom.CustomTextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView113"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tag1"
            android:background="@drawable/border_image"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="#tag" />

        <com.booxtown.custom.CustomTextView
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView113"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tag2"
            android:background="@drawable/border_image"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="#tag" />

        <com.booxtown.custom.CustomEdittext
            android:id="@+id/editText10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView113"
            android:layout_alignStart="@+id/textView113"
            android:layout_below="@+id/textView113"
            android:visibility="visible"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignTop="@+id/editText10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/editText10"
            android:layout_toRightOf="@+id/editText10"
            android:src="@drawable/btn_add"
            android:visibility="visible" />

    </TableRow>

</RelativeLayout>