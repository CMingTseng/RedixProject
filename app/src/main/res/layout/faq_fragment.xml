<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FaqFragment">

    <redix.booxtown.custom.CustomEdittext
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/editSearch"
        android:background="@color/color_hint_interact"
        android:hint="Search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/include2"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/search"
        android:textColorHint="@color/color_text_hint"
        android:paddingLeft="15dp" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/editSearch"
        android:layout_above="@+id/menu_bottom_faq"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_content_faq"
        android:layout_below="@+id/editSearch"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/menu_bottom_faq" />

    </LinearLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView_search_faq"
        android:layout_alignTop="@+id/editSearch"
        android:layout_alignRight="@+id/editSearch"
        android:layout_alignEnd="@+id/editSearch"
        android:layout_gravity="top|center_vertical|right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:padding="10dp" />




</FrameLayout>
