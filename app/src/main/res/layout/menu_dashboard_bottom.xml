<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dot_light_screen1">

    <com.booxtown.custom.CustomButton
        android:layout_width="237dp"
        android:layout_height="36dp"
        android:textAllCaps="false"
        android:text="Rate  this transaction"
        android:id="@+id/btn_menu_dashboard_bottom_rate"
        android:layout_below="@+id/row1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_add_book_2"
        android:textColor="@color/dot_light_screen1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/slide_desc"/>

    <com.booxtown.custom.CustomButton
        android:layout_width="237dp"
        android:layout_height="36dp"
        android:textAllCaps="false"
        android:text="Cancel this transaction"
        android:id="@+id/btn_menu_dashboard_bottom_cancel"
        android:layout_below="@+id/btn_menu_dashboard_bottom_rate"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_add_book_2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/slide_desc"
        android:textColor="@color/dot_light_screen1"/>

    <com.booxtown.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction cancelled"
        android:id="@+id/txt_menu_dashboard_cancel"
        android:layout_below="@+id/btn_menu_dashboard_bottom_cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_text"
        android:textSize="@dimen/slide_desc"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/row1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.booxtown.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/textView119"

            android:gravity="right"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_menu_dashboard_bottom_status"
            android:layout_toStartOf="@+id/img_menu_dashboard_bottom_status" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_menu_dashboard_bottom_status"
            android:src="@drawable/myprofile_tick"

            android:gravity="left"
            android:layout_marginRight="140dp"
            android:layout_marginEnd="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>