<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_listview_filter"
        android:button="@drawable/img_checkbox"
        android:checked="false" />

    <redix.booxtown.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Text"
        android:id="@+id/txt_listview_filter"
        android:layout_toRightOf="@+id/checkBox_listview_filter"
        android:textSize="@dimen/slide_desc"
        android:layout_marginTop="14dp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_hint"
        android:layout_alignBottom="@+id/checkBox_listview_filter"
        android:layout_alignRight="@+id/txt_listview_filter"
        android:layout_alignEnd="@+id/txt_listview_filter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>