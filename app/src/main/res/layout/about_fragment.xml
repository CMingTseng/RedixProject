<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dot_light_screen1"
    tools:context="com.booxtown.fragment.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.booxtown.custom.CustomTextView
            android:id="@+id/abouts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:text="@string/about_booxtown"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_text_big" />
    </ScrollView>
</FrameLayout>
