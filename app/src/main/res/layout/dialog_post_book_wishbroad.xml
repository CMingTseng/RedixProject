<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/customborder">

        <com.booxtown.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post a book to Wishboard"
            android:id="@+id/textView138"
            android:gravity="center"
            android:textColor="@color/dot_light_screen1"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp" />

        <com.booxtown.custom.CustomEdittext
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_title_wishboard"
            android:hint="Title"
            android:textColorHint="@color/dot_light_screen2"
            android:layout_below="@+id/textView138"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/dot_light_screen2"
            android:ellipsize="end"
            android:singleLine="true"
            android:imeOptions="actionDone"

            />

        <com.booxtown.custom.CustomEdittext
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_author_wishboard"
            android:hint="Author"
            android:textColorHint="@color/dot_light_screen2"
            android:layout_below="@+id/editText_title_wishboard"
            android:backgroundTint="@color/dot_light_screen2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:imeOptions="actionDone"

            />

        <com.booxtown.custom.CustomEdittext
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_comment_wishboard"
            android:hint="Comments (50 Character)"
            android:textColorHint="@color/dot_light_screen2"
            android:layout_below="@+id/editText_author_wishboard"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/dot_light_screen2"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:imeOptions="actionDone"

            />

        <com.booxtown.custom.CustomTextView
            android:layout_width="241dp"
            android:layout_height="37dp"
            android:text="Submit"
            android:background="@drawable/bg_interact_bt_popup"
            android:id="@+id/btn_submit_dialog_post_book_wishbroad"
            android:gravity="center_vertical|center"
            android:layout_below="@+id/editText_comment_wishboard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/slide_desc_welcome"
            android:textColor="@color/color_text" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_close_dialog_post_book_wishbroad"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
