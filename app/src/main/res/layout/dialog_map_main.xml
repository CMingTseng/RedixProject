<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border"
        android:id="@+id/relativeLayout13">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_map1"
            android:layout_margin="3dp"
            android:id="@+id/relativeLayout12">
            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txt_title_marker"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/dot_light_screen2"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="7dp"
                android:textSize="@dimen/slide_desc"/>

            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txt_author_marker"
                android:layout_below="@+id/txt_title_marker"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/dot_light_screen2"
                android:textSize="@dimen/text_wishboard_date"
                />

            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_map_main"
                android:layout_below="@+id/txt_author_marker"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                app:siBorderColor="@color/color_title_book"
                app:siBorderWidth="1dp"
                android:layout_marginBottom="3dp"
                />

            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f"
                android:id="@+id/txt_user_marker"
                android:layout_alignTop="@+id/img_map_main"
                android:layout_toRightOf="@+id/img_map_main"
                android:layout_toEndOf="@+id/img_map_main"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/dot_light_screen2"
                android:textSize="@dimen/text_wishboard_date"
                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar_marker"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:layout_marginLeft="-4dp"
                android:progressBackgroundTint="@color/dot_light_screen1"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:layout_below="@+id/txt_user_marker"
                android:layout_alignLeft="@+id/txt_user_marker"
                android:layout_alignStart="@+id/txt_user_marker"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_swap_marker"
                android:layout_alignBottom="@+id/ratingBar_marker"
                android:layout_toRightOf="@+id/ratingBar_marker"
                android:layout_toEndOf="@+id/ratingBar_marker"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="14dp"
                android:id="@+id/img_free_marker"
                android:layout_alignBottom="@+id/ratingBar_marker"
                android:layout_toRightOf="@+id/img_swap_marker"
                android:layout_toEndOf="@+id/img_swap_marker"
                android:layout_marginRight="5dp"
                android:layout_alignTop="@+id/img_swap_marker" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_buy_marker"
                android:layout_alignBottom="@+id/img_free_marker"
                android:layout_toRightOf="@+id/img_free_marker"
                android:layout_toEndOf="@+id/img_free_marker"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout13"
        android:layout_alignRight="@+id/relativeLayout13"
        android:layout_marginTop="-10dp"
        android:layout_alignEnd="@+id/relativeLayout13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottom_arrow"
            android:id="@+id/textView20"
            android:textSize="@dimen/text_22sp"
            android:textColor="@color/dot_light_screen1"
            android:background="@color/bg_transfer"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottom_arrow"
            android:textColor="@color/color_title_book"
            android:textSize="@dimen/slide_desc"
            android:id="@+id/textView21"
            android:layout_marginTop="-2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>