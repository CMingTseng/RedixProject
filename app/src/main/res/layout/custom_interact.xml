<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topic_interact"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView_next_interac"
        android:layout_toStartOf="@+id/imageView_next_interac"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <com.booxtown.custom.CustomTextView
                android:id="@+id/txt_title_interact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Topic Name goes here "
                android:textColor="@color/color_text_big"
                android:textSize="@dimen/text_size_16" />

            <com.booxtown.custom.CustomTextView
                android:id="@+id/txt_count_interact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="(23)"
                android:textColor="@color/color_text_big"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/imageView_next_interac"
        android:layout_toStartOf="@+id/imageView_next_interac"
        android:id="@+id/tableLayout">

        <com.booxtown.custom.CustomTextView
            android:id="@+id/txtTitleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Last Updated on "
            android:textColor="@color/color_text_smal"
            android:textSize="@dimen/text_size_14" />

        <com.booxtown.custom.CustomTextView
            android:id="@+id/txt_time_update_interact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="18-06-16"
            android:textColor="@color/color_text_smal"
            android:textSize="@dimen/text_size_13" />
    </TableRow>

    <ImageView
        android:layout_width="11dp"
        android:layout_height="24dp"
        android:id="@+id/imageView_next_interac"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <com.booxtown.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/textView79"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background_listing"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
</RelativeLayout>
