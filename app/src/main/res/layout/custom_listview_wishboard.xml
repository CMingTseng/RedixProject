<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="top"
    android:paddingLeft="5dp"
    android:id="@+id/relativeLayout_wishboard"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.6">

            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/slide_desc"
                android:text=""
                android:layout_marginTop="10dp"
                android:id="@+id/txt_title_lisview_wishboard"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginLeft="5dp" />

            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txt_name_custom_listview_wishboard"
                android:layout_below="@+id/txt_title_lisview_wishboard"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_by_exploer"/>

            <redix.booxtown.custom.CustomTextView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:id="@+id/textView68"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/color_text_hint"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_marginTop="10dp"
                android:id="@+id/txt_date_customlistview_wishboard"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textSize="@dimen/text_wishboard_date"/>

            <redix.booxtown.custom.CustomTextView
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:id="@+id/textView128"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/color_text_hint"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:id="@+id/imgv_listview_respond"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>