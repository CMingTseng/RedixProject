<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/customborder"
        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <redix.booxtown.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Edit password"
                android:id="@+id/textView7"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="20dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:backgroundTint="@color/dot_light_screen1"
                android:layout_marginTop="30dp" />

            <redix.booxtown.custom.CustomEdittext
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText_change_old"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_alignRight="@+id/textView7"
                android:layout_alignEnd="@+id/textView7"
                android:password="false"
                android:hint="Enter old password"
                android:paddingBottom="20dp"
                android:textColorHint="#ffffff"
                android:textColor="@color/dot_light_screen1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:autoText="false"
                android:backgroundTint="@color/dot_light_screen1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                />

            <redix.booxtown.custom.CustomEdittext
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText_change_new"
                android:layout_below="@+id/editText_change_old"
                android:layout_alignLeft="@+id/editText_change_old"
                android:layout_alignStart="@+id/editText_change_old"
                android:layout_alignRight="@+id/editText_change_old"
                android:layout_alignEnd="@+id/editText_change_old"
                android:hint="Enter new password"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:backgroundTint="@color/dot_light_screen1"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:layout_marginTop="10dp" />

            <redix.booxtown.custom.CustomEdittext
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:textSize="18sp"
                android:id="@+id/editText_change_re"
                android:layout_below="@+id/editText_change_new"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/editText_change_new"
                android:layout_alignEnd="@+id/editText_change_new"
                android:hint="Re - enter new password"
                android:layout_marginBottom="20dp"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:backgroundTint="@color/dot_light_screen1"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <redix.booxtown.custom.CustomButton
                android:layout_width="224dp"
                android:layout_height="36dp"
                android:text="Change Password"
                android:textAllCaps="false"
                android:id="@+id/button_change_pass"
                android:layout_below="@+id/editText_change_re"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_white_popup"
                android:textColor="#f56767"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imv_close_dialog_changepass"
            android:src="@drawable/btn_close_filter" />
    </LinearLayout>


</RelativeLayout>