<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_close_upgrade"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_wishbroad_close" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_close_upgrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/relativeLayout14">

        <com.booxtown.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Upgrade your membership"
            android:id="@+id/textView22"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/dot_light_screen1"
            android:textSize="@dimen/size_24_sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/relativeLayout14"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout15"
        android:layout_marginTop="20dp">

        <com.booxtown.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Upgrade your membership for AED 25/month"
            android:id="@+id/textView23"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="left|center_vertical|center_horizontal"
            android:textColor="@color/dot_light_screen1"
            android:paddingLeft="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/relativeLayout15"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout16"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:id="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_book"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="2dp" />

        <com.booxtown.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enjoy connecting with other readers"
            android:id="@+id/textView24"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginLeft="5dp"
            android:textColor="@color/dot_light_screen1"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/relativeLayout16"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout17"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:id="@+id/imageView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/icon_book"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="2dp" />

        <com.booxtown.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Locate your favorite books nearby"
            android:id="@+id/textView25"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="5dp"
            android:textColor="@color/dot_light_screen1"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout17"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout18"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:id="@+id/imageView5"
            android:background="@drawable/icon_book"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp" />

        <com.booxtown.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Find easily what books are available for sale, swap or even for free"
            android:id="@+id/textView26"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_marginLeft="5dp"
            android:textColor="@color/dot_light_screen1"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout18"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout19"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:id="@+id/imageView7"
            android:background="@drawable/icon_book"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp" />

        <com.booxtown.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Even if you canâ€™t find your book right now add it to the wishboard"
            android:id="@+id/textView32"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView7"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_marginLeft="5dp"
            android:textColor="@color/dot_light_screen1"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/relativeLayout19"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout20"
        android:layout_marginRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:id="@+id/imageView9"
            android:background="@drawable/icon_book"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp" />

        <com.booxtown.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="No limits at all"
            android:id="@+id/textView34"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9"
            android:layout_marginLeft="5dp"
            android:textColor="@color/dot_light_screen1"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <com.booxtown.custom.CustomTextView
        android:layout_width="281dp"
        android:layout_height="41dp"
        android:text="Upgrade"
        android:id="@+id/btn_upgrade"
        android:layout_below="@+id/relativeLayout20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/bg_interact_bt_popup"
        android:textColor="@color/color_text"
        android:textSize="@dimen/setting" />

</RelativeLayout>
