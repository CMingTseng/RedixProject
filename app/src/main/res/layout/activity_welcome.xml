<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_welcome"
    >
    <com.booxtown.autoviewpager.AutoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        />

    <com.booxtown.custom.CustomButton
        android:id="@+id/btn_sigup_wellcome"
        android:layout_width="@dimen/btn_signin"
        android:textSize="@dimen/slide_desc_welcome"
        android:layout_height="36dp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/btn_signin_maginleft"
        android:text="@string/SignUp"
        android:background="@drawable/bg_btn_welcome"
        android:textColor="@color/backgroung_signin" />

    <com.booxtown.custom.CustomButton
        android:id="@+id/btn_sigin_wellcome"
        android:layout_width="@dimen/btn_signin"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175dp"
        android:textAllCaps="false"
        android:text="@string/SignIn"
        android:textSize="@dimen/slide_desc_welcome"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/btn_signin_maginleft"
        android:background="@drawable/bg_btn_welcome"
        android:textColor="@color/backgroung_signin" />

    <com.booxtown.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/slide_desc"
        android:text="@string/SignInWith"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <com.facebook.login.widget.LoginButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/signin_fb"
            android:layout_centerInParent="true"
            android:background="@mipmap/fb"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/signin_twitter"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/signin_google"/>
    </LinearLayout>
</RelativeLayout>
