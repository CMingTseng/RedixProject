<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_listings_detail"
    android:paddingBottom="15dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/liner_coment"
        android:layout_below="@+id/textView141"
        android:layout_alignLeft="@+id/view6"
        android:layout_alignStart="@+id/view6"
        android:layout_alignRight="@+id/img_close_dialog_unsubcribe"
        android:layout_alignEnd="@+id/img_close_dialog_unsubcribe">
    <android.support.v7.widget.RecyclerView
        android:fillViewport="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_comment"
         />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_hint"

        android:layout_alignLeft="@+id/textView67"
        android:layout_alignStart="@+id/textView67"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/view6"
        android:layout_below="@+id/textView141"
        android:layout_marginLeft="10dp" />



    <com.booxtown.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:typeface="sans"
        android:fontFamily="sans-serif-light"

        android:textSize="20sp"
        android:id="@+id/textView141"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>
</RelativeLayout>
