
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/three_buttons_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment"
    android:background="@color/background_listing">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_search"
        android:layout_centerHorizontal="true"
        android:id="@+id/explore_search" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tab_explore"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >
        </android.support.v7.widget.RecyclerView>


    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/custom_tabbar"
        android:layout_below="@+id/explore_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tab_explore"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />
    </RelativeLayout>
</FrameLayout>
